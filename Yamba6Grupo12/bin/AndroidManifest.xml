<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.udea.compumovil.grupo12.yamba6"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- permiso para usar el receiver, permite los eventos de notificaciones -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <service android:name="co.edu.udea.compumovil.grupo12.yamba6.ServicioRecargar"/> <!--definicion del servicio recargar  -->
        
        <activity
            android:name="co.edu.udea.compumovil.grupo12.yamba6.EstadoActivity"
            android:label="@string/app_name" >
            <intent-filter>
				<action android:name="co.edu.udea.compumovil.grupo12.yamba6.action_subir" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
            
           
        </activity>
        <activity
            android:name="co.edu.udea.compumovil.grupo12.yamba6.AjustesActivity"
            android:label="@string/action_settings" >
        </activity>
        
        <activity
            android:name="co.edu.udea.compumovil.grupo12.yamba6.PrincipalActivity"        
            android:label="@string/title_activity_principal" > <!-- esta linea no esta en el libro-->
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
        <provider
            android:name="co.edu.udea.compumovil.grupo12.yamba6.EstadoProvider"
            android:authorities="co.edu.udea.compumovil.grupo12.yamba6.EstadoProvider"
            android:exported="false"/>
        <activity android:name="co.edu.udea.compumovil.grupo12.yamba6.DetallesActivity"></activity>
        
        <!-- agregamos el BootReceiver -->
        <receiver android:name=".BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
        <!-- agregamos el NotificationReceiver -->
        <receiver android:name=".BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.NEW_STATUSES" />
            </intent-filter>
        </receiver>
        
        <!-- agregamos el widget -->
        <receiver
            android:name="co.edu.udea.compumovil.grupo12.yamba6.YambaWidget"
            android:exported="false" >
            <intent-filter>
                <action android:name="co.edu.udea.compumovil.grupo12.yamba6.action.NEW_STATUSES" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/yamba_widget" />
        </receiver>
            
    </application>

</manifest>
